using System;

/*Write a program which prompts the user for a point in x-y coordinate system 
and determines in which quardant the coordinate point is located
or notifies the user if the point lies on origin. */

class Quadrants
{
    static void Main()
    {
        int X, Y;

        Console.WriteLine("Find the quadrant for a point in x-y axis:");
        Console.Write("X coordinate: ");
        X = Convert.ToInt32(Console.ReadLine());
        Console.Write("Y coordinate: ");
        Y = Convert.ToInt32(Console.ReadLine());

        if (X > 0 && Y > 0)
            Console.Write("The coordinate point ({0},{1}) is in the First quandrant.\n", X, Y);
        else if (X < 0 && Y > 0)
            Console.Write("The coordinate point ({0},{1}) is in the Second quandrant.\n", X, Y);
        else if (X < 0 && Y < 0)
            Console.Write("The coordinate point ({0},{1}) is in the Third quandrant.\n", X, Y);
        else if (X > 0 && Y < 0)
            Console.Write("The coordinate point ({0},{1}) is in the Fourth quandrant.\n", X, Y);
        else if (X == 0 && Y == 0)
            Console.Write("The coordinate point ({0},{1}) is at the origin.\n", X, Y);
    }
}




